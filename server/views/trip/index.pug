extends ../layout/index
block content
    main.container.mt-5
        .row
            .col-md-5
                img(src=`/img/destinos_${trip.img}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1= trip.title
                p
                    i.fas.fa-calendar-alt
                    |  #{trip.departure_date} - #{trip.return_date}
                p
                    i.fas.fa-dollar-sign
                    |  #{trip.price} MXN
                p
                    i.fas.fa-users
                    |  #{trip.available} Disponibles
                p= trip.description