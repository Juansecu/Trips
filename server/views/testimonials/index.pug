extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5= page
        if (errors)
            each error in errors
                .alert.alert-danger.text-center= error.message
        .row
            .col-md-12
                include ../layout/partials/testimonials
                
            .col-md-12
                h2.text-center Agrega un Testimonial.
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimonials", method="POST")
                            .form-group
                                label(for="name") Nombre
                                input(type="text", id="name", class="form-control", placeholder="Tu Nombre", name="name", value=name)
                            .form-group
                                label(for="email") Correo Electrónico
                                input(type="text", id="email", class="form-control", placeholder="Tu Correo Electrónico", name="email", value=email)
                            .form-group
                                label(for="message") Mensaje
                                textarea#message(class="form-control", name="message", rows="3", placeholder="Tu Mensaje")= message
                            button.btn.btn-success.btn-block(type="submit") Dar Testimonio